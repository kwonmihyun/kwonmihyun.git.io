<!DOCTYPE html>
<html>
  <head>
    <title>Company</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  <link href="/aseets/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/aseets/css/font-awesome.min.css">
  <link rel="stylesheet" href="/aseets/css/animate.css">
  <link href="/aseets/css/prettyPhoto.css" rel="stylesheet">
  <link href="/aseets/css/style.css" rel="stylesheet" />
  
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  
  </head>

  <body>
  
  <header>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse.collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
            <div class="navbar-brand">
              <a href="/home/main"><h1><span>DAMI </span>Agency</h1></a>
            </div>
          </div>

          <div class="navbar-collapse collapse">
            <div class="menu">
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation"><a href="/home/main" class="active">Home</a></li>
                <li role="presentation"><a href="/menu/about">About Us</a></li>
                <li role="presentation"><a href="/menu/services">Services</a></li>
                <li role="presentation"><a href="/posts/new">Contact</a></li>
                
                <% if user_signed_in? %>
                <li role="presentation"><%= link_to "로그아웃", destroy_user_session_path, method: :delete %></li>
                <% else %>
                <li role="presentation"> <%= link_to "로그인", user_session_path %></li>
                <li role="presentation"> <%= link_to "회원가입", "/users/sign_up" %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>
  
    <%= yield %>
    
    
    
  <script src="/assets/js/jquery-2.1.1.min.js"></script>
  <script src="/assets/js/bootstrap.min.js"></script>
  <script src="/assets/js/jquery.prettyPhoto.js"></script>
  <script src="/assets/js/jquery.isotope.min.js"></script>
  <script src="/assets/js/wow.min.js"></script>
  <script src="/assets/js/functions.js"></script>
  
  
  </body>
  <%= render 'layouts/footer'%>
</html>
